{
  "name": "Incident Report",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "For incident reporting (Information/Physical).",
  "icons": {
      "16": "icons/SVCLogo16x16.png",
      "32": "icons/SVCLogo32x32.png",
      "48": "icons/SVCLogo48x48.png",
      "128": "icons/SVCLogo128x128.png"
  },
  "action": {
      "default_popup": "popup/popup.html"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["https://mail.google.com/*"],
  "oauth2": {
    "client_id": "804357090273-khsrgv3l37cjh7tl5vd9plt97321fae7.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/gmail.modify"]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "popup/script.js",
        "popup/information/phishingGuideline/*",
        "/popup/information/urlChecker/*",
        "/popup/physical/*"
      ],
      "matches": [
        "https://*/*",
        "https://mail.google.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["popup/script.js",
      "popup/information/urlChecker/WebSecurity.js",
      "popup/physical/contactList.js",
      "popup/mailButton.js"
    ],
      "run_at": "document_idle"
    }
  ]
}
