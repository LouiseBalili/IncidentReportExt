{
  "name": "Incident Report",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "For incident reporting (Information/Physical).",
  "icons": {
      "16": "icons/SVCLogo16x16.png",
      "32": "icons/SVCLogo32x32.png",
      "48": "icons/SVCLogo48x48.png",
      "128": "icons/SVCLogo128x128.png"
  },
  "action": {
      "default_popup": "popup/popup.html"
  },
  "permissions": ["tabs", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "popup/script.js",
        "/popup/information/*",
        "/popup/warning/*",
        "/popup/physical/*"
      ],
      "matches": [
        "<all_urls>",
        "https://*/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup/script.js",
      "popup/information/WebSecurity.js",
      "popup/information/RTPscript.js",
      "popup/warning/warning.js",
      "popup/physical/contactlList.js"
    ],
      "type": "module",
      "run_at": "document_idle"
    }
  ]
}
